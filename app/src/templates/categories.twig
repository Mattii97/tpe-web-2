{% extends "index.twig" %}

{% block content %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.description}}</td>
                <td>{{ category.color }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}