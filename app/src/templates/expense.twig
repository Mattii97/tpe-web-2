{% extends "index.twig" %}

{% block content %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Nombre del producto</th>
            <th>Costo</th>
            <th>Nombre de categoria</th>
            <th>Descripcion categoria</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ expense.id }}</td>
            <td>{{ expense.date | date('d-m-Y')}}
            <td>{{ expense.productName }}</td>
            <td>{{ expense.cost }}</td>
            <td>{{ category.name}}</td>
            <td>{{ category.description}}</td>
        </tr>
    </tbody>
</table>
{% endblock %}